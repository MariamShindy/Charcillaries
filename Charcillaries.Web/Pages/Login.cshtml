@page
@using Charcillaries.Core
@using Microsoft.Extensions.Localization
@using System.Globalization
@model Charcillaries.Web.Pages.Login
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IStringLocalizer<Global> L


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang ="@CultureInfo.CurrentCulture.Name"
          dir="@(CultureInfo.CurrentCulture.TextInfo.IsRightToLeft ? "rtl" : "ltr")">
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@L["login"]</title>
    <link href="~/Icons/logo.png" rel="icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <style>

        [data-valmsg-for]:not(:empty) {
            padding: 7px;
        }

    </style>
</head>
<body>
<div class="d-flex vh-100">
    <div class="d-flex w-100 justify-content-center align-items-center" style="background: #355da3">
        <div class="w-50">
            <h2 class="text-light">@L["login"]</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="email" class="form-label text-light">@L["email"]</label>
                    <input asp-for="Input.Email" type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label text-light">@L["password"]</label>
                    <input asp-for="Input.Password" type="password" class="form-control" id="password" required>
                </div>
                    <div class="mb-1">
                        @Html.ValidationMessage("loginError", new { @class = "text-danger rounded-3" })
                    </div>
                    <a href="/forgot-password" class="text-light">@L["forgot-password"]</a>
             <br /><br />
                <button type="submit" class="btn btn-light">@L["login"]</button>
            </form>
        </div>
    </div>
    <div class="justify-content-center p-2 align-items-center flex-column w-25 d-none d-md-flex"
         style="background: #eeeeee">
        <img class="logo" src="@Url.Content("~/Icons/logo.png")" alt="Logo">
        <h1>Charcillaries</h1>
    </div>
</div>
</body>
</html>