@page
@using Charcillaries.Core
@using Charcillaries.Core.Features.Airline
@using Microsoft.Extensions.Localization
@model Charcillaries.Web.Pages.Admin.Airlines.AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject IStringLocalizer<Global> L
@inject IStringLocalizer<AirlineLocalization> LA


@{
    Layout = "_AdminLayout";
    ViewData["Title"] = @LA["add-airline"];
}

<div class="d-flex align-items-center w-100 flex-column mt-5">
    <h1>@LA["add-airline"]</h1>
    <form method="post" class="w-50" enctype="application/x-www-form-urlencoded">
        @Html.AntiForgeryToken()
        <div>
            <label for="airlineName" class="form-label">@L["name"]</label>
            <input type="text" class="form-control" id="airlineName" asp-for="Airline.Name" placeholder=@L["enter-name"]>
            <span asp-validation-for="Airline.Name" class="text-danger"></span> <!-- This is the validation message -->
        </div>
        <div>
            <label for="airlineEmail" class="form-label">@L["email"]</label>
            <input type="text" class="form-control" id="airlineEmail" asp-for="Airline.Email" placeholder=@L["enter-email"]>
            <span asp-validation-for="Airline.Email" class="text-danger"></span> <!-- This is the validation message -->
        </div>
        <div>
            <label for="airlineContactInfo" class="form-label">@L["phone-number"]</label>
            <input type="text" class="form-control" id="airlineContactInfo" asp-for="Airline.ContactInfo" placeholder=@L["enter-contact-info"]>
            <span asp-validation-for="Airline.ContactInfo" class="text-danger"></span> <!-- This is the validation message -->
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn button mt-4">@L["submit"]</button>
        </div>
    </form>

</div>